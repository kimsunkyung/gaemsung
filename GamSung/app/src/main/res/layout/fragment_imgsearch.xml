<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Color_white">

   <ImageView
       android:layout_margin="15dp"
       android:layout_gravity="center"
       android:src="@drawable/search_title"
       android:layout_width="230dp"
       android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginLeft="25dp"
        android:src="@drawable/search_first_manual"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />

    <EditText
        android:textColor="#5E6072"
        android:id="@+id/search_locat"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:textColorHint="#5E6072"
        android:hint="00동으로 입력해주세요"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:src="@drawable/second_manual" />

    <ImageButton
        android:layout_margin="20dp"
        android:id="@+id/search_img"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/search_input_img"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <ImageView
        android:layout_marginLeft="25dp"
        android:src="@drawable/thirrd_manual"
        android:layout_width="160dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_marginTop="20dp"
        android:id="@+id/search_start"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/search_button"
        android:layout_width="260dp"
        android:layout_height="75dp" />

</LinearLayout>