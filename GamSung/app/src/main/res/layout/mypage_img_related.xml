<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mypage_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="95dp"
        android:layout_height="120dp">
        <TextView
            android:textColor="@color/Color_black_50"
            android:id="@+id/date"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="13dp"
            android:text="2019.01.18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/main_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/cafe1"
            android:layout_width="80dp"
            android:layout_height="90dp" />
    </LinearLayout>

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/image_next_bar"
        android:layout_width="10dp"
        android:layout_height="90dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sub_img1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/cafe1"
            android:layout_width="80dp"
            android:layout_height="90dp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/sub_img2"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/cafe1"
        android:layout_width="80dp"
        android:layout_height="90dp" />

    <ImageView
        android:id="@+id/sub_img3"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/cafe1"
        android:layout_width="80dp"
        android:layout_height="90dp" />



</LinearLayout>