<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/first_banner"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@drawable/fst_theme"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/first_home_img"
                android:scaleType="fitXY"
                android:src="@drawable/first_image"
                android:layout_width="120dp"
                android:layout_height="130dp" />

            <ImageView
                android:id="@+id/first_home_letter"
                android:src="@drawable/fst_letter"
                android:layout_width="120dp"
                android:layout_height="30dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/second_home_img"
                android:scaleType="fitXY"
                android:src="@drawable/first_image"
                android:layout_width="120dp"
                android:layout_height="130dp" />

            <ImageView
                android:id="@+id/second_home_letter"
                android:src="@drawable/fst_letter"
                android:layout_width="120dp"
                android:layout_height="30dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/third_home_img"
                android:scaleType="fitXY"
                android:src="@drawable/first_image"
                android:layout_width="120dp"
                android:layout_height="130dp" />

            <ImageView
                android:id="@+id/third_home_letter"
                android:src="@drawable/fst_letter"
                android:layout_width="120dp"
                android:layout_height="30dp" />

        </LinearLayout>
    </LinearLayout>






</LinearLayout>