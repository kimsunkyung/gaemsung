<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/search_window"
    android:background="@drawable/search_loading"
    >


    <LinearLayout
        android:orientation="vertical"
        android:visibility="invisible"
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/top"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:src="@drawable/search_title"
            android:layout_width="220dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@drawable/firstinput_manual"
            android:layout_width="140dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/first_image"
            android:id="@+id/input_img"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/output_manual"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:id="@+id/img_result_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/research"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/research"
            android:layout_width="260dp"
            android:layout_height="50dp" />


    </LinearLayout>


</LinearLayout>